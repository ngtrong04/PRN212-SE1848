<Window x:Class="XuLyList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XuLyList"
        mc:Ignorable="d"
        Title="SE1848-DaoNguyenTrong" Height="450" Width="659">
    <Grid>
        <Label Content="Thao tác trên List" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtGiaTri" HorizontalAlignment="Left" Margin="10,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Button x:Name="btnThem" Content="Thêm vào list" HorizontalAlignment="Left" Margin="355,18,0,0" VerticalAlignment="Top" FontSize="20" Width="205" Click="btnThem_Click"/>
        <ListBox x:Name="lstDuLieu" SelectionMode="Multiple" HorizontalAlignment="Left" Height="319" Width="120" Margin="10,87,0,0" VerticalAlignment="Top" FontSize="50"/>
        <Button x:Name="btnSapXepTang" Content="Sắp xếp tăng" HorizontalAlignment="Left" Margin="355,186,0,0" VerticalAlignment="Top" FontSize="20" Width="205" Click="btnSapXepTang_Click"/>
        <Button x:Name="btnSapXepGiam" Content="Sắp xếp giảm" HorizontalAlignment="Left" Margin="355,231,0,0" VerticalAlignment="Top" FontSize="20" Width="205" Click="btnSapXepGiam_Click"/>
        <Button x:Name="btnXoa1PhanTu" Content="Xóa 1 phần tử" HorizontalAlignment="Left" Margin="355,285,0,0" VerticalAlignment="Top" FontSize="20" Width="205" Click="btnXoa1PhanTu_Click"/>
        <Button x:Name="btnXoaToanBoPhanTu" Content="Xóa toàn bộ phần tử" HorizontalAlignment="Left" Margin="355,382,0,0" VerticalAlignment="Top" FontSize="20" Width="205" Click="btnXoaToanBoPhanTu_Click"/>
        <Button x:Name="btnXoaNhieuPhanTu" Content="Xóa nhiều phần tử" HorizontalAlignment="Left" Margin="355,333,0,0" VerticalAlignment="Top" FontSize="20" Width="205" Click="btnXoaNhieuPhanTu_Click"/>
        <Label Content="Giá trị:" HorizontalAlignment="Left" Margin="355,63,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.13,-0.01"/>
        <TextBox x:Name="txtGiaTriChen" HorizontalAlignment="Left" Margin="440,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <Label Content="Vị trí:" HorizontalAlignment="Left" Margin="365,110,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="txtViTriChen" HorizontalAlignment="Left" Margin="440,110,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" FontSize="18"/>
        <Button x:Name="btnChen" Content="Chèn" HorizontalAlignment="Left" Margin="470,141,0,0" VerticalAlignment="Top" Width="90" Height="40" Click="btnChen_Click"/>

    </Grid>
</Window>
