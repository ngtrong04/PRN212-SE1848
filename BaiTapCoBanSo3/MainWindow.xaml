<Window x:Class="BaiTapCoBanSo3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTapCoBanSo3"
        mc:Ignorable="d"
        Title="SE1848-DaoNguyenTrong" Height="450" Width="800">
    <StackPanel>
        <Label Content="RadioButton Control" FontSize="20"/>
        <GroupBox Height="150                  
                  " Header="Bạn thấy hệ thống này như thế nào?" FontSize="20">
        <StackPanel>
            <RadioButton x:Name="radRatTot" Content="Rất tốt" FontSize="20" GroupName="hethong" Margin="10,0"/>
            <RadioButton x:Name="radTot" Content="Tốt" FontSize="20" GroupName="hethong" Margin="10,0"/>
            <RadioButton x:Name="radTamDuoc" Content="Tạm được" FontSize="20" GroupName="hethong" Margin="10,0"/>
            <RadioButton x:Name="radKhongTot" Content="Không tốt" FontSize="20" GroupName="hethong" Margin="10,0"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Height="85" Header="Giới tính của bạn là gì?" FontSize="20">
            <StackPanel>
                <RadioButton x:Name="radNam" Content="Nam" GroupName="gioitinh" Margin="10,0"/>
                <RadioButton x:Name="radNu" Content="Nữ" GroupName="gioitinh" Margin="10,0"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Height="100" Header="Chọn tác vụ" FontSize="20" >
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnGui" Content="Gửi phản hồi" HorizontalAlignment="Left" Width="200" Margin="10" Click="BtnGui_Click"/>
                <Button x:Name="BtnHuy" Content="Hủy" HorizontalAlignment="Left" Width="200" Margin="10" Click="BtnHuy_Click"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
