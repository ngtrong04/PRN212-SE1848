<Window x:Class="DaoNguyenTrongWPF.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:DaoNguyenTrongWPF"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Title="Khách hàng" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Tài khoản">
                    <MenuItem Header="Sửa hồ sơ" Click="EditProfile_Click"/>
                    <MenuItem Header="Đăng xuất" Click="Logout_Click"/>
                </MenuItem>
                <MenuItem Header="Lịch sử đơn hàng" Click="OrderHistory_Click"/>
            </Menu>
            <ContentControl x:Name="MainContent"/>
        </DockPanel>
    </Grid>
</Window>